{
  "manifest_version": 3,
  "name": "TrackerA11y",
  "version": "1.0.0",
  "description": "Captures detailed DOM information for accessibility testing",
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "safari": {
      "strict_min_version": "15.4"
    }
  }
}
