{
  "name": "trackera11y",
  "version": "0.1.0",
  "description": "Comprehensive accessibility testing platform with integrated audio analysis",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:focus": "jest tests/unit/FocusManager.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "demo:focus": "ts-node -r tsconfig-paths/register examples/focus-tracking-demo.ts",
    "demo:recorder": "ts-node -r tsconfig-paths/register examples/event-recorder-demo.ts",
    "demo:native": "ts-node -r tsconfig-paths/register examples/native-test-demo.ts",
    "demo:integrated": "ts-node -r tsconfig-paths/register examples/integrated-demo.ts",
    "demo:accessibility": "ts-node -r tsconfig-paths/register examples/accessibility-demo.ts",
    "demo:enhanced": "ts-node -r tsconfig-paths/register examples/enhanced-tracker-demo.ts",
    "cli": "ts-node -r tsconfig-paths/register cli.ts",
    "record": "npm run cli record",
    "analyze": "npm run cli analyze",
    "app:dev": "concurrently \"npm run app:build-watch\" \"npm run electron:dev\"",
    "app:build": "npm run build && npm run app:build-renderer && npm run app:build-electron",
    "app:build-watch": "npm run build -- --watch",
    "app:build-renderer": "cd app && npm run build",
    "app:build-electron": "tsc -p app/electron",
    "electron:dev": "wait-on dist/electron/main.js && cross-env NODE_ENV=development electron .",
    "electron:pack": "npm run app:build && electron-builder",
    "electron:pack-mac": "npm run app:build && electron-builder --mac",
    "electron:pack-win": "npm run app:build && electron-builder --win",
    "electron:pack-linux": "npm run app:build && electron-builder --linux"
  },
  "keywords": [
    "accessibility",
    "testing",
    "a11y",
    "audio-analysis",
    "user-experience",
    "diarization",
    "transcription"
  ],
  "author": "TrackerA11y Team",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "commander": "^14.0.2",
    "eventemitter3": "^5.0.0",
    "mongodb": "^6.3.0",
    "msgpack-lite": "^0.1.26",
    "node-addon-api": "^7.0.0",
    "typescript": "^5.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/msgpack-lite": "^0.1.8",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.trackera11y.app",
    "productName": "TrackerA11y",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "app/build/**/*",
      "native_helpers/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}